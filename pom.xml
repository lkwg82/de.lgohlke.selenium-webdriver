        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>displayNumber</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <xvfb.display>${maven.build.timestamp}</xvfb.display>
            </properties>
        </profile>
        <profile>
            <id>sonar-coverage</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.jacoco</groupId>
                        <artifactId>jacoco-maven-plugin</artifactId>
                        <version>0.8.2</version>
                        <configuration>
                            <append>true</append>
                        </configuration>
                        <executions>
                            <execution>
                                <id>agent-for-ut</id>
                                <goals>
                                    <goal>prepare-agent</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>agent-for-it</id>
                                <goals>
                                    <goal>prepare-agent-integration</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>jacoco-site</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>report</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>release</id>
            <properties>
                <maven.build.timestamp.format>yyyyMMdd</maven.build.timestamp.format>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-source-plugin</artifactId>
                        <version>3.0.1</version>
                        <executions>
                            <execution>
                                <id>attach-sources</id>
                                <goals>
                                    <goal>jar-no-fork</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>2.10.4</version>
                        <configuration>
                            <additionalparam>-Xdoclint:none</additionalparam>
                            <quiet>true</quiet>
                        </configuration>
                        <executions>
                            <execution>
                                <id>attach-javadocs</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>1.6</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-release-plugin</artifactId>
                        <version>2.5.3</version>
                        <configuration>
                            <autoVersionSubmodules>true</autoVersionSubmodules>
                            <useReleaseProfile>false</useReleaseProfile>
                            <releaseProfiles>release</releaseProfiles>
                            <pushChanges>true</pushChanges>
                            <arguments>-Dexec.executable=${project.basedir}/add_to_latest_tag_changelog.sh</arguments>
                            <completionGoals>exec:exec</completionGoals>
                            <releaseVersion>${maven.build.timestamp}</releaseVersion>
                        </configuration>
                    </plugin>

                    <plugin>
                        <groupId>org.sonatype.plugins</groupId>
                        <artifactId>nexus-staging-maven-plugin</artifactId>
                        <version>1.6.8</version>
                        <extensions>true</extensions>
                        <configuration>
                            <serverId>ossrh</serverId>
                            <nexusUrl>https://oss.sonatype.org/</nexusUrl>
                            <autoReleaseAfterClose>true</autoReleaseAfterClose>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>pitest</id>
            <properties>
                <pitest-maven.goal>mutationCoverage</pitest-maven.goal>
                <skipTests>true</skipTests>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <version>3.1.0</version>
                        <executions>
                            <execution>
                                <id>default-jar</id>
                                <phase>never</phase>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.pitest</groupId>
                        <artifactId>pitest-maven</artifactId>
                        <version>1.4.3</version>
                        <configuration>
                            <environmentVariables>
                                <DRIVERS_PATH>${drivers.installation.directory}</DRIVERS_PATH>
                            </environmentVariables>
                            <excludedMethods>
                                <excludedMethod>equals</excludedMethod>
                                <excludedMethod>hashCode</excludedMethod>
                                <excludedMethod>toString</excludedMethod>
                            </excludedMethods>
                            <historyInputFile>${project.basedir}/pitest.history</historyInputFile>
                            <historyOutputFile>${project.basedir}/pitest.history</historyOutputFile>
                            <mutators>
                                <mutator>DEFAULTS</mutator>
                                <!--<mutator>INLINE_CONSTS</mutator>-->
                                <!--<mutator>REMOVE_INCREMENTS</mutator>-->
                                <!--<mutator>NON_VOID_METHOD_CALLS</mutator>-->
                                <!--<mutator>CONSTRUCTOR_CALLS</mutator>-->
                                <!--<mutator>REMOVE_CONDITIONALS</mutator>-->
                                <!--<mutator>EXPERIMENTAL_MEMBER_VARIABLE</mutator>-->
                                <!--<mutator>EXPERIMENTAL_SWITCH</mutator>-->
                                <!--<mutator>EXPERIMENTAL_ARGUMENT_PROPAGATION</mutator>-->
                            </mutators>
                            <!-- this is for goal 'scmMutationCoverage' -->
                            <include>
                                <include>ADDED</include>
                                <include>MODIFIED</include>
                                <include>UNKNOWN</include>
                            </include>
                            <outputFormats>
                                <outputFormat>XML</outputFormat>
                                <outputFormat>HTML</outputFormat>
                            </outputFormats>
                            <skip>false</skip>
                            <targetClasses>
                                <param>de.lgohlke.**</param>
                            </targetClasses>
                            <targetTests>
                                <param>de.lgohlke.**Test</param>
                                <param>de.lgohlke.**IT</param>
                            </targetTests>
                            <excludedClasses>
                                <excludedClass>de.lgohlke.selenium.webdriver.AbstractWebDriver</excludedClass>
                            </excludedClasses>
                            <threads>4</threads>
                            <timestampedReports>false</timestampedReports>
                            <verbose>false</verbose>
                        </configuration>
                        <executions>
                            <execution>
                                <id>mutation</id>
                                <phase>integration-test</phase>
                                <goals>
                                    <goal>${pitest-maven.goal}</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>